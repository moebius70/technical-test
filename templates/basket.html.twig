{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
    <h2 class="page-title">Basket</h2>
    <h2>Total price: {{Total}} GBP</h2>

    <div class="row">
    {% for product in products %}
        <div class="col-md-6 mb-5">
            <div class="card">
                <img class="card-img-top" src="{{ product.imageUrl }}" alt="{{ product.name }}">
                <div class="card-body">
                    <h3 class="card-title">{{ product.name }}</h3>
                    <h4>&pound;{{ (product.price/100)|number_format(2, '.', ',') }}</h4>
                    <p class="card-text">{{ product.description|raw }}</p>
                    <a href="/basket/{{ product.id }}" class="btn btn-primary">Delete</a>
                </div>
            </div>
        </div>
        {% if loop.index % 2 == 0 %}
            </div><div class="row">
        {% endif %}
    {% endfor %}
    </div>
    <div class="row mt-3">
        <div class="text-center">
            <a class="btn btn-primary" href="/checkout" title="Checkout">Checkout</a>
            {# <a href="/basket/{{ product.id }}" class="btn btn-primary">Delete</a> #}
        </div>
    </div>
{% endblock %}