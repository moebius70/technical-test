{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}
    <h2 class="page-title">Products</h2>

    <div class="row">
    {% for product in products %}
        <div class="col-md-6 mb-5">
            <div class="card">
                <img class="card-img-top" src="{{ product.imageUrl }}" alt="{{ product.name }}">
                <div class="card-body">
                    <h3 class="card-title">{{ product.name }}</h3>
                    <h4>&pound;{{ (product.price/100)|number_format(2, '.', ',') }}</h4>
                    <p class="card-text">{{ product.description|raw }}</p>
                    <a href="/{{ product.id }}" class="btn btn-primary">Add to Basket</a>
                </div>
            </div>
        </div>
        {% if loop.index % 2 == 0 %}
            </div><div class="row">
        {% endif %}
    {% endfor %}
    </div>
    <div class="col-md-12 mb-5">
        <div class="text-center">
            <a class="btn btn-primary" href="/basket" title="View Basket">View Basket</a>
        </div>
    </div    
{% endblock %}